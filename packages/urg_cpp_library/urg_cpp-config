#!/bin/sh

prefix=/usr/local

usage="Usage: urg_cpp-config [--version] [--cflags] [--libs]"

if test $# -eq 0; then
      echo "${usage}" 1>&2
      exit 1
fi

while test $# -gt 0; do

  case $1 in
    --version)
      echo "0.0.1"
      ;;
    --cflags)
      echo -I${prefix}/include/urg_cpp `urg_c-config --cflags`
      ;;
    --libs)
      echo  -lurg_cpp -lurg_c -lrt
      ;;
    *)
      echo "${usage}" 1>&2
      exit 1
      ;;
  esac
  shift
done
